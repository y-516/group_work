<%= form_with(model: @blog, local: true) do |f| %>
  <% if @blog.errors.any? %>
    <div id="error_explanation">
      <h2><%= @blog.errors.count %>件のエラーがあります。</h2>
      <ul>

      <% @blog.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%=f.label :title %>
  <%=f.text_field :title %>

  <%=f.label :content %>
  <%=f.text_field :content %>

  <%= f.submit "登録"%>

  <%end%>
